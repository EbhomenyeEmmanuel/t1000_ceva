<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.attendant.pay_bills.PayBillsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/first_page_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bills_position_bg_selected"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/second_page_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bills_position_bg_default"
            android:padding="10dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/third_page_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bills_position_bg_default"
            android:padding="10dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/fourth_page_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bills_position_bg_default"
            android:padding="10dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>